<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="product.info.stock.sku">
            <block
                name="Perspective_ErsteViewModule_CustomText"
                template="Perspective_ErsteViewModule::customtext.phtml"
                after="product.info.type">
                <arguments>
                    <argument name="customtext" xsi:type="string">Custom text</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceBlock name="product.info.description">
            <arguments>
                <argument name="title" translate="true" xsi:type="string">Details - Test example</argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
